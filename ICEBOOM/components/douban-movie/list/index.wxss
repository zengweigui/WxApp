@import "/app.wxss";
.movie { position: relative; display: flex; width: 100%; height: 240rpx; padding: 20rpx; background-color: #fff; border-bottom: 1px solid #eee; }
.movie:active { background-color: #efefef; }
.movie .pic { width: 140rpx; height: 200rpx; margin-right: 40rpx; }
.movie .pic image { position: relative; width: 140rpx; height: 200rpx; background-color: #efefef; }
.movie .pic image.not-src::after { position: absolute; top: 50%; left: 50%; content: '无图片'; font-size: 24rpx; color: #333; transform: translate(-50%,-50%); white-space: nowrap; }
.movie .info { display: flex; flex-direction: column; justify-content: space-between; flex: 1; height: 100%; padding: 10rpx 0; width: 400rpx; line-height: 1; }
.movie .info .title { display: inline-block; width: 400rpx; font-size: 32rpx; color: #333; }
.movie .info .genres { display: inline-block; width: 400rpx; font-size: 24rpx; color: #666; }
.movie .info .casts { display: inline-block; width: 400rpx; font-size: 24rpx; color: #666; }
.movie .info .year { font-size: 24rpx; color: #999; }
.movie .info .countries { font-size: 24rpx; color: #999; }
.movie .rating { position: absolute; right: 20rpx; top: 30rpx; font-size: 28rpx; color: #f3ae13; }
.not-data { position: fixed; left: 50%; top: 50%; text-align: center; font-size: 32rpx; color: #666; transform: translate(-50%, -50%) }